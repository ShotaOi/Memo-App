<div class="user-show-main">
    <div class="user-show-container">
        <div class="user-name-email">
            <%= image_tag(@user.image_name.present? ? "/user_images/#{@user.image_name}" : "/user_images/default_user.jpg", class: 'user-photo') %>
            <div class="user-details">
                <h2><%= @user.name %></h2>
                <p><%= @user.email %></p>
                <% if @user.id == @current_user.id %>
                    <%= link_to("編集", "/users/#{@user.id}/edit") %>
                <% end %>
            </div>
        </div>
        <% @user.posts.each do |post| %>
            <div class="user-index-item">
                <div class="user-show-post-left">
                    <img src="<%= "/user_images/#{post.user.image_name}" %>">
                </div>
                <div class="user-show-post-right">
                    <div class="user-show-post-user-name">
                        <%= link_to(post.user.name, "/users/#{post.user.id}") %>
                    </div>
                    <%= link_to(post.content, "/posts/#{post.id}") %>
                </div>
            </div>
        <% end %>
    </div>
</div>
